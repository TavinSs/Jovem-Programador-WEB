@model Aluno


<style>
    #button {
        padding: 8.5px 20px;
        border-radius: 25px;
        border: 0;
        background-color: white;
        box-shadow: rgb(0 0 0 / 5%) 0 0 8px;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        font-size: 12px;
        transition: all .5s ease;
    }

        #button:hover {
            letter-spacing: 3px;
            background-color: hsl(343deg 96.2% 41.2%);
            color: hsl(0, 0%, 100%);
            box-shadow: #ce045f 0px 7px 29px 0px;
        }

        #button:active {
            letter-spacing: 3px;
            background-color: hsl(343deg 96.2% 41.2%);
            color: hsl(0, 0%, 100%);
            box-shadow: #ce045f 0px 0px 0px 0px;
            transform: translateY(10px);
            transition: 100ms;
        }

    #adicionar {
        font-family: 'Century Gothic';
        color: rgb(129,129,129);
        text-decoration: none
    }

    #label-ad {
        color: gainsboro;
    }
</style>
<form class="row g-3" asp-controller="Aluno" asp-action="EditarAluno">
    <input type="hidden" asp-for="Id" />


    <div class="col-md-6">
        <label id="label-ad" for="name" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="Nome" placeholder="Insira seu nome">
    </div>

    <div class="col-md-6">
        <label id="label-ad" for="Idade" class="form-label">Idade</label>
        <input type="text" asp-for="Idade" class="form-control" id="Idade" placeholder="Insira sua idade">
    </div>

    <div class="col-md-6">
        <label id="label-ad" for="Cep" class="form-label">Matricula</label>
        <input type="text" asp-for="Matricula" class="form-control" id="Matricula" placeholder="Insira matricula Ex: 9581539446">

    </div>
    <div class="col-md-6">
        <label id="label-ad" for="cep" class="form-label">Cep</label>
        <input type="text" asp-for="Cep" class="form-control" id="Cep" placeholder="Insira seu cep Ex: 00000-000">

    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <button id="button" type="submit">Salvar</button>
    </div>
</form>
